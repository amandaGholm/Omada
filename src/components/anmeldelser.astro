<style>
#testimonial-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .testimonial-slide {
    flex: 1 0 100%;
    display: none;
  }
  
  @media (min-width: 1000px) {
    .testimonial-slide {
      flex-basis: 33.33%;
      display: block;
    }
  }
  
  /* Slideshow styles */
  @media (max-width: 999px) {
    .testimonial-slide:first-child {
      display: block;
    }
  
    .testimonial-slide:not(:first-child) {
      position: absolute;
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
    }
  
    #testimonial-section:hover .testimonial-slide:not(:first-child) {
      opacity: 1;
    }
  
    #testimonial-section:hover .testimonial-slide:not(:first-child):nth-child(2) {
      animation: testimonial-slide-animation 20s linear infinite;
    }
  
    #testimonial-section:hover .testimonial-slide:not(:first-child):nth-child(3) {
      animation: testimonial-slide-animation 5s linear infinite 10s;
    }
  
    @keyframes testimonial-slide-animation {
      0% {
        opacity: 0;
      }
      5% {
        opacity: 1;
      }
      25% {
        opacity: 1;
      }
      30% {
        opacity: 0;
      }
      100% {
        opacity: 0;
      }
    }
  }

</style>
  

